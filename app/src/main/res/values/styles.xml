<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/Theme.AppCompat.NoActionBar</item>
        <item name="android:windowActionBarOverlay">false</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="ConseExitText" parent="android:Widget.EditText">
        <item name="android:background">@drawable/lineacampos</item>
        <item name="android:textColorHint">@color/grey_dark</item>
        <item name="android:textColor">@color/hard_gray</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAlignment">gravity</item>
        <item name="android:gravity">bottom|left</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">5dp</item>

    </style>

    <style name="ConseEditTextWhite" parent="ConseExitText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>


    <style name="ConseTittleTextH1" parent="android:Widget.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">0dp</item>
    </style>

    <style name="ConseTittleTextH2" parent="android:Widget.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">left</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
    </style>

    <style name="ConseTittleTextH2White" parent="android:Widget.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">left</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
    </style>

    <style name="ConseTittleTextH2Salmon" parent="ConseTittleTextH2">
        <item name="android:textColor">@color/salmon</item>
    </style>

    <style name="ConseParagraphText" parent="android:Widget.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">left</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
    </style>

    <style name="ConseSpinnerSelected" parent="android:Widget.TextView">
        <item name="android:background">@drawable/lineacampos</item>
        <item name="android:textColor">@color/grey_dark</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAlignment">gravity</item>
        <item name="android:gravity">bottom|left</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">5dp</item>

    </style>

    <style name="ConseSpinnerOption" parent="android:Widget.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">left|bottom</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
    </style>

    <style name="ConseSpinner" parent="Base.Widget.AppCompat.Spinner">
        <item name="android:background">@drawable/lineacampos</item>
        <item name="android:textColor">@color/grey_dark</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAlignment">gravity</item>
        <item name="android:gravity">bottom|left</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="ConseCheckbox" parent="Base.Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:textColor">@color/grey_dark</item>
        <item name="android:button">@drawable/conse_checkbox</item>
        <!--<item name="android:drawablePadding">10dip</item>-->
        <!--<item name="android:button">@android:color/transparent</item>-->
        <item name="android:textSize">18sp</item>
        <item name="android:textAlignment">gravity</item>
        <item name="android:gravity">top</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="ConseCheckboxBlackLetter" parent="ConseCheckbox">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginLeft">@dimen/check_box_margin</item>
        <item name="android:layout_marginRight">@dimen/check_box_margin</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="PagerTabStrip">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_gravity">top</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name = "ConseProgressBar" parent="Base.Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_bar_drawable</item>
        <!--<item name="minHeight">20dp</item>-->
        <!--<item name="maxHeight">50dp</item>-->
    </style>


    <dimen name="check_box_margin">35dp</dimen>
</resources>
