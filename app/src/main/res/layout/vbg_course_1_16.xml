<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:tag="has_questionary">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/bottom_padding_for_alert"
            android:paddingTop="@dimen/bottom_padding_for_alert">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black_overlay"/>

            <TextView
                android:text="@string/course_1_13_a"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/ConseTittleTextH2"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black_overlay"/>


            <TextView
                android:text="@string/course_1_16_c"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView4"
                style="@style/ConseParagraphText" />

            <TextView
                android:text="@string/course_1_16_e"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv"
                style="@style/ConseTittleTextH2"
                android:layout_marginBottom="15dp" />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/fab_margin"
                android:layout_marginRight="@dimen/fab_margin"
                android:background="@drawable/hoja"
                android:paddingTop="35dp"
                android:tag="questionary_container">


                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    style="@style/ConseCheckboxBlackLetter"
                    android:tag="correct_option"
                    android:layout_marginRight="0dp"
                    android:text="@string/course_1_16_f" />

                <CheckBox
                    android:text="@string/course_1_16_g"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    style="@style/ConseCheckboxBlackLetter"/>
                <CheckBox
                    android:text="@string/course_1_16_h"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    style="@style/ConseCheckboxBlackLetter"
                    android:tag="correct_option" />
                <CheckBox
                    android:text="@string/course_1_16_i"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    style="@style/ConseCheckboxBlackLetter"
                    android:tag="correct_option" />
                <CheckBox
                    android:text="@string/course_1_16_j"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    style="@style/ConseCheckboxBlackLetter" />
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="15dp" >

                <Button
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:id="@+id/bt_previous"
                    android:background="@drawable/button_back"
                    android:onClick="onClick" />


                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="56dp"
                    android:id="@+id/bt_finish"
                    android:background="@drawable/button_ready"
                    android:layout_marginLeft="20dp"
                    android:onClick="onClick"
                    android:tag="MOD_2_Q1_VALIDATION" />

            </LinearLayout>


        </LinearLayout>

    </ScrollView>


</LinearLayout>