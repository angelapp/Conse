<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_light"
    android:gravity="center_vertical|center_horizontal"
    android:paddingTop="20dp">

    <TextView
        android:text="@string/contact_form_tittle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/ConseTittleTextH1"
        android:drawableStart="@drawable/sobre"
        android:layout_marginBottom="20dp"
        android:drawablePadding="10dp"
        android:layout_marginTop="15dp" />

    <TextView
        android:text="@string/message_type_tittle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/ConseTittleTextH2" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sp_contact_form_type"
        android:background="@null"/>

    <TextView
        android:text="@string/your_phone_tittle_h2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/ConseTittleTextH2"
        android:layout_marginBottom="10dp" />

    <EditText
        android:layout_width="match_parent"
        android:inputType="phone"
        android:hint="@string/your_phone_tittle_h2"
        android:ems="10"
        android:id="@+id/et_contact_phone"
        style="@style/ConseExitText"
        android:background="@drawable/rectangulo_mensaje"
        android:gravity="top|left"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:layout_height="40dp" />

    <TextView
        android:text="@string/your_message_tittle_h2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/ConseTittleTextH2"
        android:layout_marginBottom="10dp" />

    <EditText
        android:layout_width="match_parent"
        android:inputType="textMultiLine"
        android:hint="@string/write_here"
        android:ems="10"
        android:id="@+id/et_contact_message"
        style="@style/ConseExitText"
        android:layout_height="150dp"
        android:background="@drawable/rectangulo_mensaje"
        android:gravity="top|left"
        android:paddingLeft="10dp"
        android:paddingTop="10dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bt_send_contact"
        android:background="@drawable/button_send_contact"
        android:layout_marginBottom="@dimen/iv_bottom_margin"
        android:layout_marginTop="@dimen/iv_top_margin"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal" />

</LinearLayout>