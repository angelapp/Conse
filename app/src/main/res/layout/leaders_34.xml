<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:tag="@string/need_avatar">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/bottom_padding_for_alert"
            android:paddingTop="@dimen/padding_top_for_courses"
            android:weightSum="1">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black_overlay"/>

            <TextView
                android:text="@string/lideres_32_01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView1"
                style="@style/CourseModuleTittle" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black_overlay"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/square_padding_top"
                android:layout_marginLeft="@dimen/courses_margin_left"
                android:layout_marginRight="@dimen/courses_margin_right">


                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/globitoparaaudio"
                    android:id="@+id/fl_image">

                    <TextView
                        android:text="@string/lideres_34_01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView5"
                        style="@style/CourseSubTittle"
                        android:gravity="center"
                        android:layout_marginLeft="@dimen/fab_margin"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="-15dp" />

                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_below="@+id/fl_image"
                    android:layout_marginTop="-60dp"
                    android:tag="here_avatar"
                    android:layout_height="200dp"
                    android:foregroundGravity="left"
                    android:paddingRight="120dp">

                </FrameLayout>

            </RelativeLayout>



            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:background="@drawable/hoja_dest_l34"
                android:layout_marginLeft="@dimen/paper_background_margine_left"
                android:layout_marginRight="@dimen/paper_background_margine_right"
                android:gravity="center_vertical"
                android:layout_height="850dp">

                <TextView
                    android:text="@string/lideres_34_02"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView30"
                    style="@style/CourseParagraphText"
                    android:layout_marginLeft="@dimen/courses_bullets_intern_margin_left"
                    android:layout_marginRight="@dimen/courses_bullets_intern_margin_right" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginTop="15dp">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/courses_bullets_intern_margin_left"
                        android:layout_marginRight="@dimen/courses_bullets_intern_margin_right"
                        android:gravity="top"
                        android:layout_marginTop="10dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/bullet"
                            android:id="@+id/imageView11"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="@dimen/bullets_margin" />

                        <TextView
                            android:text="@string/lideres_34_03"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView10"
                            style="@style/CourseParagraphText"
                            android:layout_weight="1"
                            android:paddingBottom="10dp"
                            android:layout_marginTop="0dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/courses_bullets_intern_margin_left"
                        android:layout_marginRight="@dimen/courses_bullets_intern_margin_right"
                        android:gravity="top">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/bullet"
                            android:id="@+id/imageView11"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="@dimen/bullets_margin" />

                        <TextView
                            android:text="@string/lideres_34_04"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView10"
                            style="@style/CourseParagraphText"
                            android:layout_weight="1"
                            android:paddingBottom="10dp"
                            android:layout_marginTop="0dp" />
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/courses_bullets_intern_margin_left"
                        android:layout_marginRight="@dimen/courses_bullets_intern_margin_right"
                        android:gravity="top"
                        android:layout_marginTop="10dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/bullet"
                            android:id="@+id/imageView11"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="@dimen/bullets_margin" />

                        <TextView
                            android:text="@string/lideres_34_05"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView10"
                            style="@style/CourseParagraphText"
                            android:layout_weight="1"
                            android:layout_marginTop="0dp" />
                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/next_button_margin_top"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/courses_margin_left"
                android:layout_marginRight="@dimen/courses_margin_right">

                <Button
                    android:id="@+id/bt_previous"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:background="@drawable/button_back"
                    android:onClick="onClick" />


                <Button
                    android:id="@+id/bt_next"
                    android:layout_width="wrap_content"
                    android:layout_height="56dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/button_next"
                    android:onClick="onClick" />

            </LinearLayout>


        </LinearLayout>

    </ScrollView>


</LinearLayout>