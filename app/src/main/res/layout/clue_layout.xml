<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <TextView
        android:text="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/number_clue"
        style="@style/ConseTittleTextH1"
        android:textColor="@color/white"
        android:layout_marginLeft="@dimen/square_padding_top"
        android:layout_marginRight="@dimen/square_padding_top"
        android:textSize="45sp" />

    <TextView
        android:text="@string/vbg_course_start_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_clue"
        style="@style/ConseParagraphText"
        android:textColor="@color/white"
        android:layout_marginLeft="@dimen/square_padding_top"
        android:layout_marginRight="@dimen/square_padding_top"/>
</LinearLayout>