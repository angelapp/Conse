<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_ros"
    android:gravity="center"
    android:tag="@string/tag_end_mod_2">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingTop="@dimen/padding_top_for_courses"
            android:paddingBottom="@dimen/bottom_padding_for_alert">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black_overlay"/>

            <TextView
                android:text="@string/course_1_13_a"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/CourseModuleTittle" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black_overlay"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/globo_end_mod"
                android:gravity="center"
                android:layout_height="350dp"
                android:layout_marginTop="15dp">



                <ImageView
                    android:layout_width="wrap_content"
                    android:src="@drawable/diploma"
                    android:layout_height="80dp" />

                <TextView
                    android:text="@string/course_1_45_tittle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/ConseTittleTextH1"
                    android:layout_marginTop="15dp"/>

                <TextView
                    android:text="@string/course_1_18_consejera_experta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_conse_tittle"
                    style="@style/ConseParagraphText"
                    android:lines="2"
                    android:layout_marginBottom="15dp"
                    android:gravity="center_horizontal"
                    android:layout_marginRight="25dp" />


                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="56dp"
                    android:id="@+id/bt_next"
                    android:background="@drawable/button_finish"
                    android:onClick="onClick"
                    android:layout_marginBottom="15dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="-40dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="7"
                        android:gravity="center_horizontal"
                        android:paddingLeft="@dimen/end_course_bottom_button_padding">

                        <TextView
                            android:text="@string/review_contents_again"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            style="@style/CourseParagraphText"
                            android:textSize="14sp"
                            android:gravity="center_horizontal" />

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/bt_previous"
                            android:background="@drawable/button_volver"
                            android:layout_marginTop="10dp"
                            android:onClick="onClick" />
                    </LinearLayout>

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_below="@+id/fl_image"
                        android:layout_marginTop="-10dp"
                        android:tag="here_avatar"
                        android:foregroundGravity="left"
                        android:layout_weight="5"
                        android:layout_height="150dp"></FrameLayout>

                </LinearLayout>


            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>