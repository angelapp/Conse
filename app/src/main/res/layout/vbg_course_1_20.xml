<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/bottom_padding_for_alert"
            android:paddingTop="@dimen/padding_top_for_courses">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black_overlay"/>

            <TextView
                android:text="@string/course_1_20_tittle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView1"
                style="@style/CourseModuleTittle" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black_overlay"/>



            <TextView
                android:text="@string/course_1_20_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                style="@style/CourseSubTittle"
                android:drawableLeft="@drawable/uno"
                android:gravity="left|center_vertical"
                android:drawablePadding="15dp"
                android:layout_marginTop="@dimen/course_first_content_margin_top"
                android:layout_marginRight="@dimen/courses_margin_right"
                android:layout_marginLeft="@dimen/courses_li_margin_top" />


            <TextView
                android:text="@string/course_1_20_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView9"
                style="@style/CourseParagraphText"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:layout_marginRight="@dimen/courses_margin_right"
                android:layout_marginLeft="@dimen/courses_li_margin_left" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/courses_margin_right"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/courses_li_margin_left">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/bullet"
                    android:id="@+id/imageView11"
                    android:layout_margin="@dimen/bullets_margin" />

                <TextView
                    android:text="@string/course_1_20_text_1_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView10"
                    style="@style/CourseParagraphText"
                    android:layout_weight="1"
                    android:paddingBottom="10dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/courses_margin_right"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/courses_li_margin_left">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/bullet"
                    android:id="@+id/imageView11"
                    android:layout_margin="@dimen/bullets_margin" />

                <TextView
                    android:text="@string/course_1_20_text_1_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView11"
                    style="@style/CourseParagraphText"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:paddingBottom="10dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/courses_margin_right"
                android:gravity="top"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="@dimen/courses_li_margin_left">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/bullet"
                    android:id="@+id/imageView11"
                    android:layout_marginTop="5dp"
                    android:layout_margin="@dimen/bullets_margin" />

                <TextView
                    android:text="@string/course_1_20_text_1_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView12"
                    style="@style/CourseParagraphText"
                    android:layout_marginTop="0dp"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="10dp" />
            </LinearLayout>









            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_marginRight="@dimen/courses_margin_right"
                android:layout_marginLeft="@dimen/courses_li_margin_left">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/white"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="@dimen/play_button_margin_bottom"
                    android:layout_marginTop="@dimen/play_button_margin_top">

                    <TextView
                        android:text="@string/course_1_20_text_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/CourseSoundTittle"
                        android:textColor="@color/salmon"
                        android:layout_weight="3" />
                    <Button
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:id="@+id/bt_play"
                        android:background="@drawable/play"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:onClick="onClick"
                        android:tag="tu_eres_quien_decide" />

                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/white"/>
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="@dimen/next_button_margin_top"
                android:layout_marginRight="@dimen/courses_margin_right"
                android:layout_marginLeft="@dimen/courses_margin_left">

                <Button
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:id="@+id/bt_previous"
                    android:background="@drawable/button_back"
                    android:onClick="onClick" />


                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="56dp"
                    android:id="@+id/bt_next"
                    android:background="@drawable/button_next"
                    android:layout_marginLeft="20dp"
                    android:onClick="onClick" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>


</LinearLayout>