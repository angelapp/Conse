<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_modulo_1"
    android:gravity="center">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/globo"
        android:gravity="center"
        android:paddingBottom="25dp"
        android:paddingTop="25dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/insignia1"/>

        <TextView
            android:text="@string/lideres_11_01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView9"
            style="@style/ConseTittleTextH1"
            android:layout_marginTop="15dp"/>

        <TextView
            android:text="@string/lideres_11_02"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            style="@style/ConseParagraphText"
            android:lines="6"
            android:layout_marginBottom="15dp"
            android:gravity="center_horizontal"
            android:paddingRight="15dp" />


        <Button
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:id="@+id/bt_next"
            android:background="@drawable/button_finish"
            android:onClick="onClick"
            android:layout_marginBottom="35dp" />
    </LinearLayout>

</LinearLayout>