<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical|center_horizontal"
    android:background="@color/grey_light">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center_vertical|center_horizontal">
                        <TextView
                            android:text="@string/vbg_course_start_tittle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView9"
                            style="@style/ConseTittleTextH1"
                            android:layout_marginBottom="15dp" />

                        <TextView
                            android:text="@string/vbg_course_start_message"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView10"
                            style="@style/ConseParagraphText"
                            android:gravity="center_horizontal" />

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/bt_start_vbg"
                            android:background="@drawable/button_start_vbg"
                            android:layout_marginTop="15dp" />

                </LinearLayout>

        </ScrollView>

</LinearLayout>