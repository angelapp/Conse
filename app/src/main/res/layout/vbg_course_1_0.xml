<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical|center_horizontal"
    android:background="@color/grey_light">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center_vertical|center_horizontal"
                    android:paddingBottom="@dimen/bottom_padding_for_alert"
                    android:paddingTop="@dimen/padding_top_for_courses">
                        <TextView
                            android:text="@string/vbg_course_start_tittle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView9"
                            style="@style/CourseTittle"
                            android:layout_marginBottom="15dp"
                            android:lines="3"
                            android:layout_marginLeft="@dimen/courses_margin_left"
                            android:layout_marginRight="@dimen/courses_margin_right"
                            android:paddingTop="40dp" />

                        <TextView
                            android:text="@string/vbg_course_start_message"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView10"
                            style="@style/CourseParagraphText"
                            android:layout_marginLeft="@dimen/courses_margin_left"
                            android:layout_marginRight="@dimen/courses_margin_right" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/courses_margin_left"
                            android:layout_marginRight="@dimen/courses_margin_right"
                            android:layout_marginTop="@dimen/next_button_margin_top"
                            android:gravity="center_horizontal"
                            android:layout_gravity="center_horizontal">

                                <Button
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/bt_next"
                                    android:background="@drawable/button_start_vbg"
                                    android:onClick="onClick"
                                    android:layout_alignParentBottom="true"
                                    android:layout_alignParentStart="true" />
                        </RelativeLayout>

                </LinearLayout>

        </ScrollView>

</LinearLayout>