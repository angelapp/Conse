<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_let_start"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="conse.nrc.org.co.consejo.Activities.LetStart"
    android:orientation="vertical"
    android:gravity="center_vertical|center_horizontal"
    android:background="@color/grey_light">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fl_avatar">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:srcCompat="@null"
            android:id="@+id/iv_accesory"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitXY" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:srcCompat="@null"
            android:id="@+id/iv_hair"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitXY" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:srcCompat="@null"
            android:id="@+id/iv_nose"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitXY"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:srcCompat="@null"
            android:id="@+id/iv_eyes"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitXY"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:srcCompat="@null"
            android:id="@+id/iv_head"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitXY"/>

    </FrameLayout>

    <TextView
        android:text="@string/let_start_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        style="@style/ConseParagraphText"
        android:gravity="center_horizontal"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="25dp" />

    <TextView
        android:text="@string/let_start_tittle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        style="@style/ConseTittleTextH1"
        android:layout_marginTop="20dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bt_let_start"
        android:background="@drawable/button_let_start"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp" />
</LinearLayout>
