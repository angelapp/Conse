<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="left|center_horizontal"
        android:layout_marginLeft="40dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="25dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/iconorutas"
            android:id="@+id/imageView3"
            android:layout_gravity="center_vertical" />

        <TextView
            android:text="@string/protection_paths_tittle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/ConseTittleTextH1"
            android:id="@+id/textView12"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:lines="2"
            android:gravity="left" />

        <!--<Button
            android:text="ver archivo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/bt_test"
            android:layout_weight="1" />
-->
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/ly_paths_content"
        android:layout_marginTop="10dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/camino_29"
            android:id="@+id/imageView15"
            android:scaleType="center"
            android:scrollY="-270dp" />

        <Button
            android:text="@string/protection_paths_vbg_button"
            android:layout_height="wrap_content"
            android:id="@+id/bt_left"
            android:background="@drawable/rect_amarillo"
            android:drawableBottom="@drawable/flecha_izq"
            android:drawablePadding="10dp"
            android:layout_width="250dp"
            android:textColor="@color/black"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:layout_marginLeft="25dp" />

        <Button
            android:text="@string/protection_paths_leaders_button"
            android:layout_height="wrap_content"
            android:id="@+id/bt_right"
            android:background="@drawable/rect_amarillo"
            android:drawableBottom="@drawable/flecha_der"
            android:drawablePadding="10dp"
            android:layout_width="250dp"
            android:textColor="@color/black"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="150dp"
            android:layout_gravity="right"
            android:layout_marginRight="25dp" />

    </FrameLayout>


</LinearLayout>