<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/bottom_padding_for_alert"
            android:paddingTop="@dimen/padding_top_for_courses">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black_overlay"/>

            <TextView
                android:text="@string/course_1_3_a"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView1"
                style="@style/CourseModuleTittle" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black_overlay"/>



            <TextView
                android:text="@string/course_1_3_b"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                style="@style/CourseParagraphText"
                android:layout_marginLeft="@dimen/courses_margin_left"
                android:layout_marginRight="@dimen/courses_margin_right"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="20dp" />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="@dimen/fab_margin">

                <TextView
                    android:layout_width="wrap_content"
                    style="style/ConseTittleTextH2White"
                    android:text="@string/number_1"
                    android:textSize="30sp"
                    android:gravity="center_horizontal"
                    android:paddingTop="10dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/down_arrow_1" />

                <TextView
                    android:text="@string/course_1_3_1_c"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView3"
                    style="@style/CourseParagraphText"
                    android:layout_marginTop="0dp"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/courses_bullet_margin_left"
                    android:paddingTop="@dimen/courses_li_margin_top"
                    android:paddingBottom="@dimen/courses_li_margin_top" />

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="@dimen/fab_margin">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/down_arrow_2"
                    style="style/ConseTittleTextH2White"
                    android:text="@string/number_2"
                    android:textSize="30sp"
                    android:gravity="center_horizontal"
                    android:paddingTop="10dp"/>

                <TextView
                    android:text="@string/course_1_3_2_c"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView4"
                    style="@style/CourseParagraphText"
                    android:layout_marginTop="0dp"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/courses_bullet_margin_left"
                    android:paddingTop="@dimen/courses_li_margin_top"
                    android:paddingBottom="@dimen/courses_li_margin_top" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="@dimen/fab_margin">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/down_arrow_3"
                    style="style/ConseTittleTextH2White"
                    android:text="@string/number_3"
                    android:textSize="30sp"
                    android:gravity="center_horizontal"
                    android:paddingTop="6dp"/>

                <TextView
                    android:text="@string/course_1_3_3_c"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView5"
                    style="@style/CourseParagraphText"
                    android:layout_marginTop="0dp"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/courses_bullet_margin_left"
                    android:paddingTop="@dimen/courses_li_margin_top"
                    android:paddingBottom="@dimen/courses_li_margin_top" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="@dimen/fab_margin">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/down_arrow_4"
                    style="style/ConseTittleTextH2White"
                    android:text="@string/number_4"
                    android:textSize="30sp"
                    android:gravity="center_horizontal"
                    android:paddingTop="10dp"/>

                <TextView
                    android:text="@string/course_1_3_4_c"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView6"
                    style="@style/CourseParagraphText"
                    android:layout_marginTop="0dp"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/courses_bullet_margin_left"
                    android:paddingTop="@dimen/courses_li_margin_top"
                    android:paddingBottom="@dimen/courses_li_margin_top" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="@dimen/fab_margin">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/down_arrow_5"
                    style="style/ConseTittleTextH2White"
                    android:text="@string/number_5"
                    android:textSize="30sp"
                    android:gravity="center_horizontal"
                    android:paddingTop="10dp"/>

                <TextView
                    android:text="@string/course_1_3_5_c"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView7"
                    style="@style/CourseParagraphText"
                    android:layout_marginTop="0dp"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/courses_bullet_margin_left"
                    android:paddingTop="@dimen/courses_li_margin_top"
                    android:paddingBottom="@dimen/courses_li_margin_top" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="@dimen/next_button_margin_top">

                <Button
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:id="@+id/bt_previous"
                    android:background="@drawable/button_back"
                    android:onClick="onClick" />


                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="56dp"
                    android:id="@+id/bt_next"
                    android:background="@drawable/button_next"
                    android:layout_marginLeft="20dp"
                    android:onClick="onClick" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>


</LinearLayout>