<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_loggin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="conse.nrc.org.co.consejo.Activities.LogginActivity"
    android:orientation="vertical"
    android:background="@color/yellow"
    android:gravity="center_vertical">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bt_send_alert"
        android:gravity="bottom"
        android:background="@drawable/alertainternas"
        android:layout_gravity="bottom|center_horizontal" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/bienvenidos"
            android:id="@+id/iv_welcome_tittle"
            android:layout_marginBottom="@dimen/iv_bottom_margin"
            android:layout_marginTop="@dimen/iv_top_margin" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/conse"
            android:id="@+id/iv_conse_logo"
            android:layout_marginBottom="@dimen/iv_bottom_margin"
            android:layout_marginTop="@dimen/iv_top_margin" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/et_email"
            style="@style/ConseEditTextWhite"
            android:hint="@string/email_et_hint" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/et_password"
            style="@style/ConseEditTextWhite"
            android:hint="@string/password" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bt_loggin"
            android:background="@drawable/button_loggin"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp" />

        <TextView
            android:text="@string/tv_recovery_psw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_psw_recovery"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            style="@style/ConseTittleTextH2"
            android:layout_marginBottom="10dp"
            android:textColor="@color/salmon"
            android:textSize="21sp"
            android:clickable="true"
            android:layout_marginTop="10dp" />

    </LinearLayout>


</FrameLayout>
