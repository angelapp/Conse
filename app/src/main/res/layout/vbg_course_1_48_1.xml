<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/bottom_padding_for_alert"
            android:paddingTop="@dimen/padding_top_for_courses">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black_overlay" />

            <TextView
                style="@style/CourseModuleTittle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/course_1_47_tittle" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black_overlay" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/course_first_content_margin_top"
                android:layout_marginLeft="@dimen/courses_li_margin_top"
                android:layout_marginRight="@dimen/courses_margin_right">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/dos_48"
                    android:layout_marginRight="15dp" />

                <TextView
                    android:text="@string/course_1_48_1_tittle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/CourseSubTittle"
                    android:gravity="left" />

            </LinearLayout>

            <TextView
                android:text="@string/course_1_48_1_text1_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/ConseParagraphText"
                android:layout_marginLeft="@dimen/courses_li_margin_left_aling"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="@dimen/courses_margin_right" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black_overlay"
                android:backgroundTint="@color/white"
                android:layout_marginRight="@dimen/courses_margin_right"
                android:layout_marginLeft="@dimen/courses_li_margin_left_aling" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/courses_li_margin_left_aling"
                android:layout_marginRight="@dimen/courses_margin_right">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="@style/CourseSoundTittle"
                    android:textColor="@color/salmon"
                    android:layout_marginTop="0dp"
                    android:text="@string/course_1_15_d" />

                <Button
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:id="@+id/bt_play"
                    android:background="@drawable/play"
                    android:layout_alignParentRight="true"
                    android:onClick="onClick"
                    android:tag="existen_medidas_de_proteccion"
                    android:gravity="top|right"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black_overlay"
                android:backgroundTint="@color/white"
                android:layout_marginLeft="@dimen/courses_li_margin_left_aling"
                android:layout_marginRight="@dimen/courses_margin_right" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ruta48"
                    android:scaleType="centerCrop" />

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/next_button_margin_top"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/courses_margin_left"
                android:layout_marginRight="@dimen/courses_margin_right">

                <Button
                    android:id="@+id/bt_previous"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:background="@drawable/button_back"
                    android:onClick="onClick" />


                <Button
                    android:id="@+id/bt_next"
                    android:layout_width="wrap_content"
                    android:layout_height="56dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/button_next"
                    android:onClick="onClick" />

            </LinearLayout>


        </LinearLayout>

    </ScrollView>


</LinearLayout>