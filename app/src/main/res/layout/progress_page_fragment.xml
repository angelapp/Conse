            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/ly_module_content">

            <include
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                layout="@layout/progres_bar_item" />

            <include
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                layout="@layout/progres_bar_item" />

            <include
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                layout="@layout/progres_bar_item" />

            <include
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                layout="@layout/progres_bar_item" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>