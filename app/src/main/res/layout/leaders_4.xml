<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/bottom_padding_for_alert"
            android:paddingTop="@dimen/padding_top_for_courses">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black_overlay"/>

            <TextView
                android:text="@string/lideres_03_00"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/CourseModuleTittle" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black_overlay"/>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/course_first_content_margin_top"
                android:layout_marginLeft="@dimen/courses_margin_left"
                android:layout_marginRight="@dimen/courses_margin_right">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/white"
                    android:layout_marginLeft="@dimen/courses_play_button_line_margin_left"
                    android:layout_marginRight="@dimen/courses_play_button_line_margin_right" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="@dimen/play_button_margin_bottom"
                    android:layout_marginTop="@dimen/play_button_margin_top"
                    android:gravity="center_vertical">

                    <TextView
                        android:text="@string/lideres_04_01"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/CourseSoundTittle"
                        android:textColor="@color/salmon"
                        android:layout_weight="3" />
                    <Button
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:id="@+id/bt_play"
                        android:background="@drawable/play"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:onClick="onClick"
                        android:tag="en_el_contexto" />

                </LinearLayout>


            </LinearLayout>








            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/courses_margin_left"
                android:layout_marginRight="@dimen/courses_margin_right">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/white"
                    android:layout_marginLeft="@dimen/courses_play_button_line_margin_left"
                    android:layout_marginRight="@dimen/courses_play_button_line_margin_right" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="@dimen/play_button_margin_bottom"
                    android:layout_marginTop="@dimen/play_button_margin_top"
                    android:gravity="center_vertical">

                    <TextView
                        android:text="@string/lideres_04_02"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/CourseSoundTittle"
                        android:textColor="@color/salmon"
                        android:layout_weight="3" />
                    <Button
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:id="@+id/bt_play_2"
                        android:background="@drawable/play"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:onClick="onClick"
                        android:tag="es_el_derecho" />

                </LinearLayout>


            </LinearLayout>





            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/courses_margin_left"
                android:layout_marginRight="@dimen/courses_margin_right">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/white"
                    android:layout_marginLeft="@dimen/courses_play_button_line_margin_left"
                    android:layout_marginRight="@dimen/courses_play_button_line_margin_right" />

                <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                    android:layout_marginBottom="@dimen/play_button_margin_bottom"
                    android:layout_marginTop="@dimen/play_button_margin_top"
                    android:gravity="center_vertical">

                <TextView
                    android:text="@string/lideres_04_03"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/CourseSoundTittle"
                    android:textColor="@color/salmon"
                    android:layout_weight="3" />
                <Button
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:id="@+id/bt_play_3"
                    android:background="@drawable/play"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:onClick="onClick"
                    android:tag="si_la_corte_constitucional" />

            </LinearLayout>


            </LinearLayout>






            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/courses_margin_left"
                android:layout_marginRight="@dimen/courses_margin_right">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/white"
                    android:layout_marginLeft="@dimen/courses_play_button_line_margin_left"
                    android:layout_marginRight="@dimen/courses_play_button_line_margin_right" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="@dimen/play_button_margin_bottom"
                    android:layout_marginTop="@dimen/play_button_margin_top">

                    <TextView
                        android:text="@string/lideres_04_04"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        style="@style/CourseSoundTittle"
                        android:textColor="@color/salmon"
                        android:layout_weight="3" />
                    <Button
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:id="@+id/bt_play_4"
                        android:background="@drawable/play"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:onClick="onClick"
                        android:tag="cuando_estas_sometido" />

                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/white"
                    android:layout_marginLeft="@dimen/courses_play_button_line_margin_left"
                    android:layout_marginRight="@dimen/courses_play_button_line_margin_right" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="@dimen/next_button_margin_top"
                android:layout_marginLeft="@dimen/courses_margin_left"
                android:layout_marginRight="@dimen/courses_margin_right">

                <Button
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:id="@+id/bt_previous"
                    android:background="@drawable/button_back"
                    android:onClick="onClick"/>


                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="56dp"
                    android:id="@+id/bt_next"
                    android:background="@drawable/button_next"
                    android:layout_marginLeft="20dp"
                    android:onClick="onClick"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>


</LinearLayout>