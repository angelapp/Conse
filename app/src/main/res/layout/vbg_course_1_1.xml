<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/bottom_padding_for_alert"
            android:paddingTop="@dimen/bottom_padding_for_alert">

            <TextView
                android:text="@string/course_1_1_a"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView1"
                style="@style/ConseTittleTextH1"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/textView2"
                style="@style/ConseParagraphText"
                android:background="@drawable/circulo_naranja_2"
                android:padding="@dimen/fab_margin"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp" />


            <TextView
                android:text="@string/course_1_1_c"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView3"
                style="@style/ConseParagraphText"
                android:padding="@dimen/fab_margin"
                android:gravity="center"
                android:textStyle="italic"
                android:textSize="12sp" />


            <TextView
                android:text="@string/course_1_1_d"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView4"
                style="@style/ConseParagraphText"
                android:padding="@dimen/fab_margin"/>

            <TextView
                android:text="@string/course_1_1_e"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView5"
                style="@style/ConseTittleTextH1"
                android:gravity="center"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="15dp" >

                <Button
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:id="@+id/bt_previous"
                    android:background="@drawable/button_back"
                    android:onClick="onClick" />


                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="56dp"
                    android:id="@+id/bt_next"
                    android:background="@drawable/button_forward"
                    android:layout_marginLeft="20dp"
                    android:onClick="onClick" />

            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</LinearLayout>