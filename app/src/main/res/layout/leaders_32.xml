<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/bottom_padding_for_alert"
            android:paddingTop="@dimen/padding_top_for_courses">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black_overlay"/>

            <TextView
                android:text="@string/lideres_32_00"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/CourseModuleTittle" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black_overlay"/>


            <TextView
                android:text="@string/lideres_32_01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/CourseSubTittle"
                android:gravity="left"
                android:layout_marginLeft="@dimen/courses_margin_left"
                android:layout_marginRight="@dimen/courses_margin_right"
                android:layout_marginTop="@dimen/course_first_content_margin_top" />

            <TextView
                android:text="@string/lideres_32_02"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/CourseParagraphText"
                android:layout_marginLeft="@dimen/courses_margin_left"
                android:layout_marginRight="@dimen/courses_margin_right" />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/courses_margin_left"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:layout_marginRight="@dimen/courses_margin_right">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/forma_l32"
                    style="style/ConseTittleTextH2White"
                    android:textSize="30sp"
                    android:gravity="center_horizontal"
                    android:paddingTop="10dp"
                    android:text="@string/number_1"
                    android:layout_gravity="top"
                    android:layout_marginRight="@dimen/bullets_margin" />

                <TextView
                    android:text="@string/lideres_32_03"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/CourseParagraphText"
                    android:layout_marginTop="0dp"
                    android:gravity="center_vertical" />

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="@dimen/courses_margin_left"
                android:layout_marginBottom="15dp"
                android:layout_marginRight="@dimen/courses_margin_right">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/forma_l32"
                    style="style/ConseTittleTextH2White"
                    android:textSize="30sp"
                    android:gravity="center_horizontal"
                    android:paddingTop="10dp"
                    android:text="@string/number_2"
                    android:layout_marginRight="@dimen/bullets_margin" />

                <TextView
                    android:text="@string/lideres_32_04"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/CourseParagraphText"
                    android:layout_marginTop="0dp"
                    android:gravity="center_vertical"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="@dimen/next_button_margin_top"
                android:layout_marginLeft="@dimen/courses_margin_left"
                android:layout_marginRight="@dimen/courses_margin_right">

                <Button
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:id="@+id/bt_previous"
                    android:background="@drawable/button_back"
                    android:onClick="onClick" />


                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="56dp"
                    android:id="@+id/bt_next"
                    android:background="@drawable/button_next"
                    android:layout_marginLeft="20dp"
                    android:onClick="onClick" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>


</LinearLayout>