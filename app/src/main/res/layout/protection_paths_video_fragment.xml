<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_light">

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_video_tittle"
        style="@style/CourseSubTittle"
        android:textAlignment="center"
        android:layout_marginTop="@dimen/course_first_content_margin_top" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/courses_margin_right"
        android:layout_marginTop="@dimen/course_first_content_margin_top"
        android:id="@+id/ly_video"
        android:layout_marginLeft="@dimen/courses_margin_left"
        android:layout_marginRight="@dimen/courses_margin_right">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tag="here_video"></LinearLayout>

        <Button
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:background="@drawable/button_play_video"
            android:layout_width="70dp"
            android:id="@+id/bt_start_video"
            android:translationZ="5dp" />

    </FrameLayout>

    <Button
        android:text="@string/download_video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bt_download_video"
        android:layout_gravity="center_horizontal"
        android:background="@color/transparent"
        style="@android:style/Widget.Button.Small"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_marginBottom="15dp"
        android:textColor="@color/salmon"
        android:textStyle="normal|bold|italic"
        android:textSize="18sp" />


</LinearLayout>